<div class="main_wrapper">
  <span class="title_span"><%= @post.title %></span>
  <div class="edit_delete_wrapper">
  <% if @post.user_id == current_user.id %>
      <%= link_to "編集", "#{@post.id}/edit"%>
      <%= link_to "削除", "#{@post.id}", method: :delete %>
  <% end %>
  </div>
  <table>
    <tr>
      <th>
        人数：
      </th>
      <td>
        <%= @post.person %>
      </td>
      <th>
        対象：
      </th>
      <td>
        <%= @post.level %>
      </td>
    </tr>
    <tr>
      <th>
        日時：
      </th>
      <td colspan=3>
        <%= @post.datetime.to_s(:datetime_jp) %>
      </td>
    </tr>
    <tr>
      <th>
        場所：
      </th>
      <td colspan=3>
        <%= @post.location %>
      </td>
    </tr>
    <tr>
      <th>
        締切：
      </th>
      <td colspan=3>
        <%= @post.deadline.to_s(:datetime_jp) %>
      </td>
    </tr>
  </table>
  <div class="description_wrapper">
    <p>説明</p>
    <div class="description_field"><%= @post.description %></div>
  </div>
</div>
